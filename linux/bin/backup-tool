#!/bin/bash

# Main script for backup-tool

# Function to display usage information
usage() {
  echo "Options:"
  echo "  -n    Add new USB drives and backup destinations"
  echo "  -m    Modify existing USB drives and destinations (add/remove)"
  echo "  -b    Launch backup manually"
  echo "  -h    Display this help message"
  exit 1
}

# Check if a parameter is provided
if [ "$#" -lt 1 ]; then
  echo "Error: No option provided."
  usage
fi

# Parse the first argument
case "$1" in
  -h)
    usage
    ;;
  -n)
    # Call the script for adding new drives and destinations
    /usr/local/bin/backup-tool-n.sh "${@:2}"
    ;;
  -m)
    # Call the script for modifying drives and destinations
    /usr/local/bin/backup-tool-m.sh "${@:2}"
    ;;
  -b)
    # Call the script for deploying udev rules and systemd services
    /usr/local/bin/backup-tool-b.sh "${@:2}"
    ;;
  *)
    echo "Error: Invalid option '$1'"
    usage
    ;;
esac
